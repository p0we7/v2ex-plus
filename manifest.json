{
  "name": "v2ex plus",
  "version": "0.9.1",
  "manifest_version": 2,
  "description": "优雅便捷的 v2ex 扩展",
  "background": {
    "scripts": ["jquery191.js", "cookie.js", "background.js"]
  },
  "permissions": [
    "alarms",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "*://*.v2ex.com/*",
    "*://*.imgur.com/*",
    "*://*.weibo.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.v2ex.com/", "*://*.v2ex.com/?tab=*", "*://*.v2ex.com/go/*", "*://*.v2ex.com/recent*", "*://*.v2ex.com/changes*"],
      "css": ["v2ex_tab.css"],
      "js": ["jquery191.js", "v2ex_tab.js", "user_info.js", "real_date.js"]
    },
    {
      "matches": ["*://*.v2ex.com/t/*"],
      "css": ["v2ex_reply.css"],
      "js": ["jquery191.js", "emoticon.js", "v2ex_reply.js", "user_info.js", "real_date.js"]
    },
    {
      "matches": ["*://*.v2ex.com/new/*"],
      "css": ["v2ex_new.css"],
      "js": ["jquery191.js", "v2ex_new.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon/icon38.png"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": ["img/user_info_background.gif", "img/loading.gif"]
}